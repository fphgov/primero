<% locale_email = @resource&.locale || I18n.locale %>
<p>
    <%=
        t('user.password_reset.email_body1',
        system_name: @theme.get('site_title'),
        password_reset_link: link_to(nil, password_reset_url(reset_password_token: @token)),
        locale: locale_email).html_safe
    %>
</p>

<%
  hours = Devise.reset_password_within.to_i / 3600
  reset_request_href = link_to(t("user.password_reset.email_body_link", locale: locale_email), password_reset_request_url)
%>
<p><%= t('user.password_reset.email_body2', hours: hours, locale: locale_email).html_safe %></p>
<p><%= t('user.password_reset.email_body3', reset_request_href: reset_request_href, locale: locale_email).html_safe %></p>
